<h2>Books</h2>
  <table width="100%">
  	<tr>
  	  <th></th>
  	  <th>Title</th>
  	  <th>Opinion</th>
  	</tr>
  	<%= @books.each do |book| %>
  	  <tr>
  	  	<td><%= attachment_image_tag @user, :profile_image, :fill, 20, 20, format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg" %></td>
  	  	<td><%= link_to book.title, book_path(book) %></td>
  	  	<td><%= book.body %></td>
  	  </tr>
    <% end %>
  </table>