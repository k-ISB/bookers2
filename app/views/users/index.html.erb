
<div class="col-xs-3">
  <%= render 'users/info', user: @user, book: @book %>
</div>
<div class="col-xs-9">
  <h2>Users</h2>
  <table width="100%">
    <tr>
  	  <th width="20%">image</th>
  	  <th width="60%">name</th>
  	  <th width="20%"></th>
    </tr>
    <% @users.each do |user| %>
      <tr>
  	    <td>
  	      <%= attachment_image_tag user, :profile_image, :fill, 40, 40, format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg" %>
  	    </td>
  	    <td><%= user.name %></td>
  	    <td><%= link_to 'Show', user_path(user) %></td>
  	  </tr>
    <% end %>
  </table>
</div>


