  <% if book.errors.any? %>
    <p>errorだよ！</p>
  <% end %>
  <h2>User info</h2>
  <%= attachment_image_tag user, :profile_image, :fill, 60, 60, format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg" %>
  <div class="row">
    <div class="col-xs-12">
      <table width="100%">
        <tr></tr>
        <tr>
          <td>name</td>
          <td><%= user.name %></td>
        </tr>
        <tr>
          <td>introduction</td>
          <td><%= user.introduction %></td>
        </tr>
      </table>
    </div>
  </div>
  <div class="row">
    <div class="col-xs-12">
      <button class="btn btn-default"><%= link_to "edit", edit_user_path(user) %></button>
    </div>
  </div>
  <div class="info-edit">
    <div class="">
    </div>
  </div>
  <h2>New book</h2>
  <%= form_for(book) do |f| %>
    <div class="form-group has-icon">
      <label class="control-label sr-only">Title</label>
      <%= f.text_field :title, class:"form-control" %>
      <span class="fa fa-building form-control-icon" aria-hidden="true"></span>
    </div>
    <div class="form-group has-icon">
      <label class="control-label sr-only">Body</label>
      <%= f.text_field :body, class:"form-control" %>
      <span class="fa fa-building form-control-icon" aria-hidden="true"></span>
    </div>
    <%= f.submit "送信", class:"btn btn-lg btn-block btn-base-1 mt-20" %>
  <% end %>

