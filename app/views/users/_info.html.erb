  <% if book.errors.any? %>
    <p>errorだよ！</p>
  <% end %>
  <h2>User info</h2>
  <%= attachment_image_tag user, :profile_image, :fill, 60, 60, format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg" %>
  <div class="row">
    <div class="col-xs-12">
      <table class="table">
        <tr></tr>
        <tr>
          <td>name</td>
          <td><%= user.name %></td>
        </tr>
        <tr>
          <td>introduction</td>
          <td><%= user.introduction %></td>
        </tr>
      </table>
    </div>
  </div>
  <div class="row">
    <p><%= link_to "", edit_user_path(user), class:"col-xs-12 btn btn-default glyphicon glyphicon-wrench" %></p>
  </div>
  <div class="info-edit">
    <div class="">
    </div>
  </div>
  <h2>New book</h2>
  <%= form_for(book) do |f| %>
    <div class="form-group has-icon">
      <%= f.label :title %>
      <%= f.text_field :title, class:"form-control" %>
      <span class="fa fa-building form-control-icon" aria-hidden="true"></span>
    </div>
    <div class="form-group has-icon">
      <%= f.label :body %>
      <%= f.text_field :body, class:"form-control" %>
      <span class="fa fa-building form-control-icon" aria-hidden="true"></span>
    </div>
    <%= f.submit "create book", class:"btn btn-primary btn-block btn-base-1 mt-20" %>
  <% end %>

